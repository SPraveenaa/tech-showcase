<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img01"
    tools:context=".KolWedPackages">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hallmate"
            android:text="HALL MATE"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/hallmate" />

        <TextView
            android:id="@+id/KolPackage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="Kolonna Riverside hotel\nPackages"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/KolPackage" />

        <!-- First Image and Box-like container -->
        <ImageButton
            android:id="@+id/kolhall01"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/kolhall01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            android:layout_below="@+id/kolhall01"
            android:elevation="4dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Details01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chair count:-\nMin: 100            Max: 200\n\nTable count:-\nMin: 10            Max: 20\n\nTheme colour:-\nWhite, Gold, and Red\n\nPackage cost:- Rs. 400,000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/morepic01"
                    android:text="More Pic"
                    android:textStyle="bold"
                    android:layout_marginEnd="40dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/select01"
                    android:text="Select"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Second Image and Box-like container -->
        <ImageButton
            android:id="@+id/kolhall02"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="830dp"
            android:scaleType="fitXY"
            android:src="@drawable/kolhall02" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            android:layout_below="@+id/kolhall02"
            android:elevation="4dp"
            android:id="@+id/imgset02"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Details02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chair count:-\nMin: 80            Max: 150\n\nTable count:-\nMin: 8            Max: 15\n\nTheme colour:-\nBlue and Silver\n\nPackage cost:- Rs. 350,000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/morepic02"
                    android:text="More Pic"
                    android:textStyle="bold"
                    android:layout_marginEnd="40dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/select02"
                    android:text="Select"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
