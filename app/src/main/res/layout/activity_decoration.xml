<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Decoration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img01">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hallmate"
            android:text="HALL MATE"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/hallmate"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/upload"
            android:text="Upload \nmine"
            android:layout_below="@+id/hallmate"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/skip"
            android:text="Skip Decoration"
            android:layout_below="@+id/hallmate"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heading"
            android:layout_below="@+id/hallmate"
            android:layout_marginTop="100dp"
            android:text="Select Your Decoration Theme Here!"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/black"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/heading"
            />

        <ImageButton
            android:id="@+id/DecoWed01"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/deco01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DecWed01text"
            android:text="Rs.50 000"
            android:layout_below="@+id/DecoWed01"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MoreDetails"
            android:text="More"
            android:layout_below="@+id/DecoWed01"
            android:layout_marginLeft="230dp"
            />

        <ImageButton
            android:id="@+id/DecoWed02"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/DecWed01text"
            android:scaleType="fitXY"
            android:src="@drawable/img03"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DecWed02text"
            android:text="Rs.100 000"
            android:layout_below="@+id/DecoWed02"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MoreDetails2"
            android:text="More"
            android:layout_below="@+id/DecoWed02"
            android:layout_marginLeft="230dp"
            />

        <ImageButton
            android:id="@+id/DecoWed03"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/DecWed02text"
            android:scaleType="fitXY"
            android:src="@drawable/imgbirth01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DecWed03text"
            android:text="Rs.30 000"
            android:layout_below="@+id/DecoWed03"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MoreDetails3"
            android:text="More"
            android:layout_below="@+id/DecoWed03"
            android:layout_marginLeft="230dp"
            />

        <ImageButton
            android:id="@+id/DecoWed04"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/DecWed03text"
            android:scaleType="fitXY"
            android:src="@drawable/imgbirth02"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DecWed04text"
            android:text="Rs.35 000"
            android:layout_below="@+id/DecoWed04"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MoreDetails4"
            android:text="More"
            android:layout_below="@+id/DecoWed04"
            android:layout_marginLeft="230dp"
            />

    </RelativeLayout>

</ScrollView>
