<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img01"
    tools:context=".ChatBot">

    <TextView
        android:id="@+id/hallmate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HALL MATE"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/hallmate" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heading"
        android:text="Chatbot"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_below="@+id/hallmate"
        />

    <!-- Questions List -->
    <TextView
        android:id="@+id/questionsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="1. How can I contact you?\n2. Can I chat contact through Whatsapp?\n3. Can I pay physically (cash on payment)?\n4. Is there cancellation option?\n5. Can I create two accounts for same email address?"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Answer Display -->
    <TextView
        android:id="@+id/answerDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionsList"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Input Field for Question Number -->
    <EditText
        android:id="@+id/inputQuestionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answerDisplay"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:hint="Enter question number"
        android:inputType="number" />

    <!-- OK Button -->
    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputQuestionNumber"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="OK" />

</RelativeLayout>
